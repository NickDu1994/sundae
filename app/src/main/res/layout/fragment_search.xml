<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".android.view.index.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4879FF"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView android:layout_width="280dp"
            android:layout_height="30dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="12sp"
                        android:layout_height="12sp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/search_icon" />
                    <EditText
                        android:id="@+id/mainEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:background="@null"
                        android:inputType="text"
                        android:lines="1"
                        android:hint="请输入想要搜索的词条"/>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/clean_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/close1"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:background="#00FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10sp"
            android:layout_gravity="center_vertical"
            android:text="取消"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sugggestionPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xwing.sundae.android.customview.CustomeButtonGroupView
            android:id="@+id/historyPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.xwing.sundae.android.customview.CustomeButtonGroupView>

        <com.xwing.sundae.android.customview.CustomeButtonGroupView
            android:id="@+id/hotPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.xwing.sundae.android.customview.CustomeButtonGroupView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical">
        <ListView
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/detailMainImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/temp"/>
        <LinearLayout
            android:id="@+id/user_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/user_pic"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/boy"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/user_info_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp">
                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Loading..."
                        android:textSize="20sp"/>
                    <Button
                        android:id="@+id/user_follow"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/custom_round_button"
                        android:text="关注"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"></Button>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Loading..." />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detailSave"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="2"
                    android:src="@drawable/heart"/>
                <ImageView
                    android:id="@+id/detailLike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="2"
                    android:src="@drawable/dislike"/>
            </LinearLayout>

        </LinearLayout>
        
        <TextView
            android:id="@+id/detailFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Loading..."/>

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/html_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/additional_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Loading..."/>
                <TextView
                    android:id="@+id/like_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Loading..."/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>