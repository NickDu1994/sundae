<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".android.view.LoginActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_back_gra"

        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="200sp"
                android:src="@drawable/c"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:layout_width="55dip"-->
            <!--android:layout_height="55dip"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:src="@mipmap/sundae" />-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="@string/string_login_title"
                android:textColor="#ffffff"
                android:textSize="34sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="@string/string_login_subtitle"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <include
                android:id="@+id/input_layout"
                layout="@layout/input_layout"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <include
                android:id="@+id/layout_progress"
                layout="@layout/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="130dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/main_btn_login"
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dip"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:paddingLeft="25dip"
                android:paddingTop="10dip"
                android:paddingRight="25dip"
                android:paddingBottom="10dip"
                android:text="@string/string_login_btn"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>