        <!--android:textStyle="bold" />-->

    <TextView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="This is a content for sundae app usingThis is a content for sundae app usingThis is a content for sundae app using"
        android:textColor="#8B8B8B"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="6sp">

        <ImageView
            android:id="@+id/main_image_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/temp" />

        <ImageView
            android:id="@+id/main_image_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/temp" />

        <ImageView
            android:id="@+id/main_image_3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/temp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/additional_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<TextView-->
        <!--android:id="@+id/recommend"-->
        <!--android:layout_width="35dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_marginRight="10dp"-->
