<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:text="Digitial information"/>
    <TextView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#8B8B8B"
        android:layout_marginBottom="5dp"
        android:text="This is a content for sundae app usingThis is a content for sundae app usingThis is a content for sundae app using"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/main_image_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:src="@drawable/temp"/>
        <ImageView
            android:id="@+id/main_image_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:src="@drawable/temp"/>
        <ImageView
            android:id="@+id/main_image_3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:src="@drawable/temp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/additional_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/recommend"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="#D54F4F"
            android:background="@drawable/textview_border"
            android:text="推荐"/>
        <TextView
            android:id="@+id/view_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="1900次浏览"/>
        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="3个月前"/>
    </LinearLayout>
    <TextView
        android:id="@+id/dividing_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#505050"/>

</LinearLayout>
