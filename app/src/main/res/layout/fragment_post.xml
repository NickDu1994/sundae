<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.view.post.PostFragment"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/post_border">
            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:paddingLeft="10sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:id="@+id/post_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="发布"
                android:textSize="20dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="10sp"
                android:layout_marginRight="5dp"
                android:text="确认"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:id="@+id/post_enter"/>

        </RelativeLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.github.florent37.materialtextfield.MaterialTextField
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:mtf_backgroundColor="#FFFFFF"
                        app:mtf_labelColor="#666"
                        android:id="@+id/post_edit_t1"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="缩写(点我输入)"
                            android:textColor="#333"
                            android:textSize="15sp"
                            android:id="@+id/post_edit1"/>

                    </com.github.florent37.materialtextfield.MaterialTextField>
                    <com.github.florent37.materialtextfield.MaterialTextField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:mtf_backgroundColor="#FFFFFF"
                        app:mtf_labelColor="#666"
                        android:id="@+id/post_edit_t2"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="全称(点我输入)"
                            android:textColor="#333"
                            android:textSize="15sp"
                            android:id="@+id/post_edit2"/>

                    </com.github.florent37.materialtextfield.MaterialTextField>
                    <com.github.florent37.materialtextfield.MaterialTextField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:mtf_backgroundColor="#FFFFFF"
                        app:mtf_labelColor="#666"
                        android:id="@+id/post_edit_t3"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="标题(点我输入)"
                            android:textColor="#333"
                            android:textSize="15sp"
                            android:id="@+id/post_edit3"/>

                    </com.github.florent37.materialtextfield.MaterialTextField>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请插入封面图(3张)"
                            android:id="@+id/post_back_text"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/post_back_show1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/pluspic"
                                />

                            <ImageView
                                android:id="@+id/post_back_show2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/pluspic" />

                            <ImageView
                                android:id="@+id/post_back_show3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/pluspic" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/action_undo"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/back1" />

                            <ImageButton
                                android:id="@+id/action_redo"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/go1" />

                            <ImageButton
                                android:id="@+id/action_bold"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/bold1" />

                            <ImageButton
                                android:id="@+id/action_italic"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/italic1" />

                            <ImageButton
                                android:id="@+id/action_subscript"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/subscript1" />

                            <ImageButton
                                android:id="@+id/action_superscript"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/superscript1" />

                            <ImageButton
                                android:id="@+id/action_strikethrough"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/strikethrough1" />

                            <ImageButton
                                android:id="@+id/action_underline"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/underline1" />

                            <ImageButton
                                android:id="@+id/action_heading1"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/h11" />

                            <ImageButton
                                android:id="@+id/action_heading2"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/h12" />

                            <ImageButton
                                android:id="@+id/action_heading3"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/h13" />

                            <ImageButton
                                android:id="@+id/action_heading4"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/h14" />

                            <ImageButton
                                android:id="@+id/action_heading5"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/h15" />

                            <ImageButton
                                android:id="@+id/action_heading6"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/h16" />

                            <ImageButton
                                android:id="@+id/action_txt_color"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/fontcolor" />

                            <ImageButton
                                android:id="@+id/action_bg_color"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/bgcolor" />


                            <ImageButton
                                android:id="@+id/action_indent"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/indent" />

                            <ImageButton
                                android:id="@+id/action_outdent"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/outdent" />

                            <ImageButton
                                android:id="@+id/action_align_left"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/justify_left" />

                            <ImageButton
                                android:id="@+id/action_align_center"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/justify_center" />

                            <ImageButton
                                android:id="@+id/action_align_right"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/justify_right" />

                            <ImageButton
                                android:id="@+id/action_insert_bullets"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/bullets" />

                            <ImageButton
                                android:id="@+id/action_insert_numbers"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/numbers" />

                            <ImageButton
                                android:id="@+id/action_blockquote"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/blockquote" />



                            <ImageButton
                                android:id="@+id/action_insert_link"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@drawable/insert_link" />

                            <ImageButton
                                android:id="@+id/action_insert_checkbox"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@android:drawable/checkbox_on_background" />

                        </LinearLayout>
                    </HorizontalScrollView>

                    <jp.wasabeef.richeditor.RichEditor
                        android:id="@+id/editor"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"

                        />

                    <TextView
                        android:id="@+id/preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>
    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <com.xwing.sundae.android.util.LoadingView
            android:id="@+id/loadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </AbsoluteLayout>



</FrameLayout>